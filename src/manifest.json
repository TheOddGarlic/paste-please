{
  "manifest_version": 2,
  "name": "Imgur Please",
  "description": "Unblocks Imgur images access from documents and direct links with DuckDuckGo proxy.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "webRequest", "webRequestBlocking", "*://*.imgur.com/"],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["js/content.js"]
  }]
}